classDiagram
    class periodo{
        -ano: int
        -trimestre: int
        -activo: booleano
        +iniciarPeriodo(): void
        +finalizarPeriodo(): void
    }
    class curso{
        -id: int 
        -codigo: int
        -nombre: string
        -creditos: int
        -cupo: int
        -periodo: string
        -profesor: string
        -grupo: string
        -activo: booleano
        +matricular(): void
        +crearGrupoEstudiantes(): void
        +asignaProfesor():void
    }
    class profesor{
        -id: int
        -nombre: string
        -email: string
        -facultad: string
        +agregaInformacion(): void
        +eliminaInformacion(): void
    }
    class estudiante{
        -id: int
        -idEstudiante: string
        -nombre: string
        -email: string
        -idcarrera: string
        -materias: int
        -creditos: int
        -porcentajeCarrera: int
        +registrar(): void
        +editarPerfil(): void
        +consultarCursos(): List<Curso>
    }
    class usuario{
        +correo: string
        +contrasena: varchar
        +cambiarContrasena(): void
    }
    
